{
  "name": "foodprint",
  "version": "1.0.0",
  "description": "food supply chain on Blockchain for small scale farmers",
  "main": "server.js",
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": "16.x",
    "npm": "7.x"
  },
  "scripts": {
    "bundle": "./node_modules/browserify/bin/cmd.js src/js/app.js | uglifyjs -mc  > src/js/bundle.js",
    "preinstall": "rm -rf node_modules/*/.git/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "watchify src/js/app.js -o src/js/bundle.js -v",
    "heroku-postbuild": "npm run bundle",
    "dev": "npm run watch & nodemon server.js --host 0.0.0.0",
    "start": "node server.js",
    "truffletest": "truffle test"
  },
  "author": "Julian Kanjere, Deirdre Van de Heever, Thandeka Chehore, Natasha Oates",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "latest",
    "gulp": "latest",
    "gulp-autoprefixer": "latest",
    "gulp-clean-css": "latest",
    "gulp-concat": "latest",
    "gulp-minify-css": "latest",
    "gulp-notify": "latest",
    "gulp-plumber": "latest",
    "gulp-rename": "latest",
    "gulp-sass": "latest",
    "gulp-sourcemaps": "latest",
    "gulp-uglify": "latest",
    "nodemon": "^1.19.1",
    "truffle-flattener": "^1.5.0",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "browserify": "^16.3.0",
    "connect-ensure-login": "^0.1.1",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^2.6.2",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.16.2",
    "express-validator": "^6.2.0",
    "fs": "0.0.1-security",
    "heroku-ssl-redirect": "0.0.4",
    "jimp": "^0.6.4",
    "method-override": "^3.0.0",
